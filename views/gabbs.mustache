<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Gabbs</title>
  <link rel="stylesheet" href="/main.css" />
</head>
<body>
  <header>
    <h1>Gabble</h1> 
    <nav>
    <a href = "/login">Login</a>
    <a href = "/register">Create Account</a>
    <a href = "/user/messenger">Messages</a>
    <a href = "/user/index">Gabbs</a>
    </nav>
  </header>
  <main>
    <h3>Gabbers Gabbing About Gabbs</h3>
	   <div class = "container">
  	   <div class = "gabbContainer">
        <p>{{name}}: {{gabb}}<p>
        <span>{{timestamp}}</span>
        {{#likes}}
        <a href = ""><span>{{likes}}</a>
        {{/likes}}
        {{^likes}}
        <span>No likes yet.</span>
       </div>
       <div class = "likeContainer">
        <form action = "/addlike" method = "post">
        <button type = "submit">Like</button>
        </form>
        </br>
        {{#user}}
        <form action = "/deletePost" method = "delete">
        <button type = "submit">Delete</button>
        </form>
        {{/user}}
       </div>
      </div>
  </main> 
